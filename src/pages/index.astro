---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="13435 Gibson Remodel RFP" description="Request for Proposal website for a home remodel">
  <Fragment slot="nav"><Nav /></Fragment>
  <section class="mx-auto max-w-3xl px-4 sm:px-6 py-12 space-y-6">
    <h1 class="text-4xl sm:text-5xl font-bold tracking-tight">13435 Gibson Remodel RFP</h1>
    <!--<p class="text-slate-700">Welcome. Contractors and designers can review the scope, timeline, and gallery, then submit a proposal via the contact page.</p>-->
    <div class="flex flex-col sm:flex-row gap-3">
      <a href="/scope" class="inline-flex items-center justify-center rounded bg-slate-900 px-4 py-2 text-white hover:bg-slate-800">View Scope</a>
      <a href="/gallery" class="inline-flex items-center justify-center rounded border border-slate-300 px-4 py-2 hover:bg-slate-50">View Gallery</a>
    </div>
    <div class="w-full rounded border border-slate-200 overflow-hidden shadow-sm">
      <div class="relative aspect-[5/3]">
        <iframe
          class="absolute inset-0 h-full w-full"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3128.2359109560325!2d-122.52504892399675!3d38.366663671842154!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8084529628b28775%3A0x3323d3d1cc291c31!2s13435%20Gibson%20St%2C%20Glen%20Ellen%2C%20CA%2095442!5e0!3m2!1sen!2sus!4v1760720772082!5m2!1sen!2sus"
          style="border:0;"
          allowfullscreen
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
    <div class="pt-6 text-sm text-slate-600">
      <p>External references:</p>
      <ul class="list-disc pl-5">
        <li><a class="hover:underline" href="https://www.redfin.com/CA/Glen-Ellen/13435-Gibson-St-95442/home/2386501" target="_blank" rel="noreferrer">Redfin</a></li>
        <li><a class="hover:underline" href="https://common1.mptsweb.com/mbap/SONOMA/Asr/AsrMain/054281014000" target="_blank" rel="noreferrer">County Assessor Info</a></li>
      </ul>
    </div>
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
