---
const links = [
  { href: '/', label: 'Overview' },
  { href: '/scope', label: 'Scope' },
  { href: '/timeline', label: 'Timeline' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/contact', label: 'Contact' }
];
---

<nav id="site-nav" class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-slate-200 transition-shadow">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Hidden checkbox must be a sibling of the mobile menu for peer-checked to work -->
    <input id="nav-toggle" type="checkbox" class="peer hidden" />
    <div class="flex h-14 items-center justify-between">
      <a href="/" class="font-semibold">13435 Gibson Remodel RFP</a>
      <!-- Mobile toggle label -->
      <label for="nav-toggle"
        class="sm:hidden inline-flex items-center justify-center rounded p-2 text-slate-700 hover:bg-slate-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-300 focus-visible:ring-offset-2 focus-visible:ring-offset-white cursor-pointer"
        aria-controls="mobile-menu"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle main menu</span>
        <!-- Hamburger icon -->
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5" />
        </svg>
      </label>
      <!-- Desktop nav -->
      <ul class="hidden sm:flex gap-4 text-sm">
        {links.map((l) => (
          <li><a class="px-2 py-1 hover:text-slate-900 text-slate-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-300 focus-visible:ring-offset-2 focus-visible:ring-offset-white rounded" href={l.href}>{l.label}</a></li>
        ))}
      </ul>
    </div>
    <!-- Mobile dropdown (sibling of the checkbox) -->
    <div id="mobile-menu" class="sm:hidden hidden peer-checked:block pb-4">
      <ul class="flex flex-col gap-1 text-sm">
        {links.map((l) => (
          <li><a class="block rounded px-3 py-2 hover:bg-slate-100 text-slate-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-300 focus-visible:ring-offset-2 focus-visible:ring-offset-white" href={l.href}>{l.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script type="module" src="/src/scripts/nav.ts"></script>
