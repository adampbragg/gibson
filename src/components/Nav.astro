---
const links = [
  { href: '/', label: 'Overview' },
  { href: '/scope', label: 'Scope' },
  { href: '/timeline', label: 'Timeline' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/contact', label: 'Contact' }
];
---

<nav class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-slate-200">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="flex h-14 items-center justify-between">
      <a href="/" class="font-semibold">Home Remodel RFP</a>
      <ul class="flex gap-4 text-sm">
        {links.map((l) => (
          <li><a class="px-2 py-1 hover:text-slate-900 text-slate-600" href={l.href}>{l.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
</nav>
