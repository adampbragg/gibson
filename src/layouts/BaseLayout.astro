---
import "../styles/global.css";
const { title = "Home Remodel RFP", description = "Request for Proposal for home remodel project" } = Astro.props;
---

<html lang="en" class="h-full bg-white">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh antialiased text-slate-800 bg-white">
    <div class="flex min-h-dvh flex-col">
      <slot name="nav" />
      <main class="flex-1">
        <slot />
      </main>
      <slot name="footer" />
    </div>
  </body>
</html>
